<IfModule mod_rewrite.c>
    Options -MultiViews
    RewriteEngine On
    RewriteBase /

    # 1. Empêcher la boucle : Si on demande déjà index.php, on arrête tout.
    RewriteRule ^index\.php$ - [L]

    # 2. Si le fichier ou dossier demandé existe, on le sert.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # 3. Sinon, on envoie tout vers index.php
    RewriteRule . index.php [QSA,L]
</IfModule>
